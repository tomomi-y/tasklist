<h1>タスク一覧</h1>

<% if @tasks.any? %>

  <table class="table table-striped">
    <thread>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>状況</th>
      </tr>
    </thread>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td>
            <%= link_to task.id, task %>
          </td>
          <td>
            <%= task.content %>
          </td>
          <td>
            <%= task.status %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% end %>
<%= link_to '新規タスクの追加', new_task_path, class: "btn btn-primary" %>